@inject SocialLinkController SocialLinkController

@if (socialLinks != null)
{
    @foreach (var link in socialLinks)
    {
        <a href="@link.URL" target="_blank" rel="noopener" title="@link.Platform" class="me-3 text-white">
            <i class="@link.Icon fs-5"></i>
        </a>
    }
}

@code {
	private List<SocialLinkModel> socialLinks = new();

	protected override async Task OnInitializedAsync()
	{
		if (SocialLinkController == null)
		{
			Console.WriteLine("🚨 SocialLinkController is NULL");
			return;
		}

		socialLinks = await SocialLinkController.GetAll();
	}
}

